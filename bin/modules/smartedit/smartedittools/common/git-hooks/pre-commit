#!/bin/sh
# Called by "git commit" with no arguments.  The hook should
# exit with non-zero status after issuing an appropriate message if
# it wants to stop the commit.

# Invoke lint and prettier to validate and reformat files whenever they
# are committed.
cd smartedittools/apps/smartedit-scripts && npm run lint-staged &&
cd ../smartedit-build && node_modules/.bin/pretty-quick --staged || exit $?
